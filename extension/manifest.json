{
  "manifest_version": 3,
  "name": "ABVX Shortener",
  "version": "0.1.0",
  "description": "Shorten the current tab URL using abvx.xyz and copy it.",
  "action": {
    "default_title": "Shorten & Copy",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "clipboardWrite", "storage"],
  "host_permissions": ["https://go.abvx.xyz/*"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
